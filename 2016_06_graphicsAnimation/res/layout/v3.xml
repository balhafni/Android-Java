<merge 
  xmlns:android="http://schemas.android.com/apk/res/android" >

  <TextView
    android:id="@+id/textA"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="A"
    android:textSize="48sp" />
  <TextView
    android:id="@+id/textB"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/textA"
    android:text="B"
    android:textSize="48sp" />

</merge>